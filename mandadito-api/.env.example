#===============================================
# Database Configuration
#===============================================
DATABASE_HOST=localhost          # Database host address
DATABASE_PORT=5432              # PostgreSQL default port
DATABASE_USER=your_username     # Database username
DATABASE_PASSWORD=your_password # Database password
DATABASE_NAME=your_db_name     # Database name
DATABASE_SYNC=false            # Disable auto-sync in production
DATABASE_LOGGING=true          # Enable query logging

#===============================================
# Server Configuration
#===============================================
PORT=3000                      # Application port

#===============================================
# JWT Authentication
#===============================================
JWT_SECRET=your_secret_key     # Secret key for JWT signing
JWT_EXPIRES_IN=1d             # Token expiration time (1 day)
